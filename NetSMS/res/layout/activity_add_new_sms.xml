<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="@drawable/background" >

  
	<EditText
   		android:id="@+id/addAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:layout_alignParentTop="true"
        android:hint="@string/strAddres"
        />

		<EditText
		    android:id="@+id/addEnterBox"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignLeft="@+id/addAddress"
		    android:layout_below="@id/addAddress"
		    android:layout_toLeftOf="@+id/addSend"
		    android:hint="@string/strAddEnterBox" />

        <ImageButton
            android:id="@+id/addSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addEnterBox"
            android:layout_alignBottom="@+id/addEnterBox"
            android:layout_alignParentRight="true"
            android:src="@drawable/send_icon" />
    
</RelativeLayout>